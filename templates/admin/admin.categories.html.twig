{% extends "baseadmin.html.twig" %}

{% block body %}
    <p class="text-end">
        <a href="{{ path('admin.categorie.ajout') }}" class="btn btn-primary">
            Ajouter une nouvelle catégorie
        </a>
    </p>
    <table class="table table-striped">
        <caption>Catégories</caption>
        <thead>
            <tr>
                <th class="text-left align-top" scope="col">
                    catégories<br />
               </th>
                <th class="text-left align-top" scope="col">
            </tr>
        </thead>
        <tbody>
            <!-- boucle sur les catégories -->
            {% if categories|length > 0 %}
                {% for k in 0..categories|length-1 %}
                    <tr class="align-middle">
                        <td>
                            <h5 class="text-info">
                                {{ categories[k].name }}
                            </h5>
                        </td>                 
                        <td class="text-center">
                        {% if categories[k].formations|length == 0 %}
                            <a href="{{ path('admin.categorie.suppr', {id:categories[k].id}) }}" class="btn btn-danger" onclick="return confirm('Etes-vous sûr de vouloir supprimer {{ categories[k].name }} ?');">Supprimer</a>
                        {% else %}
                            <a class="btn btn-secondary" onclick="alert('Vous ne pouvez pas supprimer la catégorie {{ categories[k].name }} car {{ categories[k].formations|length }} formations sont rattachées à cette catégorie.');">Supprimer</a>
                        {% endif %}
                        </td>					
                    </tr>
                {% endfor %}
            {% endif %}
        </tbody>
    </table>
{% endblock %}